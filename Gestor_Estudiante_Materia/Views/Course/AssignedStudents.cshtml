@model IEnumerable<Domain.Entities.Student>
@{
    ViewData["Title"] = "Estudiantes Asignados";
}

<h2>Estudiantes Asignados a @ViewBag.CourseName</h2>

@if (!Model.Any())
{
        <div class="alert alert-info">No hay estudiantes asignados a esta materia.</div>
}
else
{
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Documento</th>
                    <th>Correo</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var student in Model)
            {
                        <tr>
                            <td>@student.Name</td>
                            <td>@student.Document</td>
                            <td>@student.Email</td>
                        </tr>
            }
            </tbody>
        </table>
}
<a asp-action="Index" class="btn btn-secondary">Volver</a>
