@model IEnumerable<Domain.Entities.Course>
@{
    ViewData["Title"] = "Materias Asignadas";
    var totalCreditos = Model.Sum(c => c.Credits);
}

<h2>Materias Asignadas a @ViewBag.StudentName</h2>

@if (!Model.Any())
{
        <div class="alert alert-info">Este estudiante no tiene materias asignadas.</div>
}
else
{
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Código</th>
                    <th>Créditos</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var course in Model)
            {
                        <tr>
                            <td>@course.Name</td>
                            <td>@course.Code</td>
                            <td>@course.Credits</td>
                        </tr>
            }
            </tbody>
        </table>
        <div class="mt-3">
            <strong>Total de créditos asignados:</strong> @totalCreditos
        </div>
}
<a asp-action="Index" class="btn btn-secondary">Volver</a>
